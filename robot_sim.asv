% Definicja robota RRP (3 przeguby)
robot = SerialLink([
    Revolute('d', 1, 'a', 1, 'alpha', pi, 'qlim', [-pi pi])   % Joint 1 (obrotowy)
    Revolute('d', 0, 'a', 1, 'alpha', 0, 'qlim', [-pi pi])    % Joint 2 (obrotowy)
    Prismatic('theta', 0, 'a', 1, 'alpha', 0, 'qlim', [0 2])  % Joint 3 (przesuwny)
], 'name', 'RRP Robot')

% Wizualizacja z 3 warto≈õciami [theta1, theta2, d3]
robot.plot([0 -1 1], 'workspace', [-3 3 -3 3 -2 3]);




